root = true  # 所在目录是项目根目录，此目录及子目录下保存的文件都会生效    
 
[*]  # 对于所有文件
indent_size = 2						          # 使用2个空格缩进
indent_style = space				        # 缩进风格
#tab_width = 4							        # 表示制表符的列数的整数
charset = utf-8							        # 文件编码格式，Visual Studio使用utf-8，以防警告
end_of_line = crls						      # 行尾格式，Windows一般为CRLF，Linux一般为LF，根据需要更改
insert_final_newline = true				  #文件结尾添加换行符，以防警告
spaces_around_operators = true			# 运算符两遍都有空格
trim_trailing_whitespace = true			# 不保留行末的空格
insert_final_newline = true			    # 在文件结尾插入新行
